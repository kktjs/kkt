{
  "name": "kkt",
  "version": "5.7.1",
  "description": "Create React apps with no build configuration, Cli tool for creating react apps.",
  "author": "Kenny Wong <wowohoo@qq.com> (https://github.com/jaywcjlove)",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kktjs/kkt.git"
  },
  "scripts": {
    "hoist": "lerna bootstrap --hoist",
    "build": "lerna exec npm run build",
    "b:kkt": "lerna exec npm run build --scope kkt",
    "b:plugin": "lerna exec npm run build --scope @kkt/loader-*  --scope @kkt/plugin-*",
    "b:example:basic": "lerna exec npm run build --scope @kkt/template-basic",
    "b:example:less": "lerna exec npm run build --scope @kkt/template-less",
    "b:example:markdown": "lerna exec npm run build --scope @kkt/template-markdown",
    "b:example:react-component-tsx": "lerna exec npm run build --scope @kkt/template-react-component-tsx",
    "b:example:rematch": "lerna exec npm run build --scope @kkt/template-rematch",
    "b:example:rematch-hash-router": "lerna exec npm run build --scope @kkt/template-rematch-hash-router",
    "b:example:rematch-tsx": "lerna exec npm run build --scope @kkt/template-rematch-tsx",
    "b:example:rematch-uiw": "lerna exec npm run build --scope @kkt/template-rematch-uiw",
    "b:example:scss": "lerna exec npm run build --scope @kkt/template-scss",
    "b:example:stylus": "lerna exec npm run build --scope @kkt/template-stylus",
    "b:example:typescript": "lerna exec npm run build --scope @kkt/template-typescript",
    "b:example:uiw": "lerna exec npm run build --scope @kkt/template-uiw",
    "watch": "lerna run watch --stream",
    "watch:lib": "lerna run --scope @kkt/* watch --stream",
    "watch:kkt": "lerna run --scope kkt watch --stream",
    "bootstrap": "lerna bootstrap --no-ci",
    "bootstrap:kkt": "lerna bootstrap --scope kkt --scope @kkt/loader-* --scope @kkt/plugin-*",
    "bootstrap:example": "lerna bootstrap --scope @kkt/template-*",
    "version": "lerna version --no-changelog --no-git-tag-version --no-push --yes",
    "publish": "lerna publish from-package",
    "updated": "lerna updated",
    "start": "lerna exec npm run start",
    "clean": "lerna clean",
    "tsbb": "tsbb"
  },
  "devDependencies": {
    "lerna": "3.20.2",
    "tsbb": "1.7.2",
    "webpack": "4.42.1"
  },
  "dependencies": {
    "@types/webpack": "4.41.10"
  }
}
